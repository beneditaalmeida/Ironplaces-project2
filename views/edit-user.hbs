<h1>{{username}}</h1>

<form action="/edit-user" method="POST">
    <div class="form-group text-center">
        <label for="sign-up-username">Please enter your username</label>
        <input  class="form-control text-center" type="text" name="username" value={{username}}>
    </div>
    <div class="form-group text-center">
        <label for="sign-up-email" class="text-center">Please enter your email address</label>
        <input  class="form-control text-center" type="email" name="email" value={{email}}>
    </div>
            <button type="submit" class="btn btn-primary">Update Information</button>
</form>