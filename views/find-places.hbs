<div class="container">
  <div class="row">
  <h1 class="my-5">Find the place you need to go!</h1>
  </div>
  <div class="row">
  <div class="mb-5">
    <a class="btn btn-outline-primary"href="/find-places/restaurants">Restaurants</a>
    <a class="btn btn-outline-primary"href="/find-places/drink-dance">Drink and dance</a>
    <a class="btn btn-outline-primary"href="/find-places/useful">Useful</a>
  </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="d-flex flex-row">
{{#each places}}
        <div class="card col-4 mx-2">
          {{!-- <img src={{this.image_url}} class="card-img-top mx-auto" style="width: 20%"> --}}
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{this.address}}</h6>
            <p class="card-text">{{this.city}}</p>
            <p class="card-text">{{this.zip}}</p>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text">{{this.category}}</p>
          </div>
          {{#ifEquals ../user.role "ADMIN"}}
          <a class="btn btn-outline-primary" href="/edit-place/{{this._id}}">Edit</a>
          <a class="btn btn-outline-danger" href="/delete-place/{{this._id}}">Delete</a>
          {{/ifEquals}}
        </div>
{{/each}}
    </div>  
  </div>
</div>
