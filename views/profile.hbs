<div class="container flex-column mt-5">
<div class="card p-4">
  <h1 class="font-weight-light">This is <strong>{{name}} {{lastName}}'s</strong> Profile</h1>
  <h5 class="font-weight-light">Your email: <strong>{{email}}</strong></h5>
  <span class="text-info">City: {{city}}</span>
</div>


  <div class="d-flex justify-content-left mt-3">
    {{!-- ÊDIT PROFILE BUTTON STARTS HERE --}}
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-outline-primary mr-2" data-toggle="modal" data-target="#exampleModal">
      Edit your Profile
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Hello, {{name}} {{lastName}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/edit-user" method="POST">
              <div class="form-group text-center">
                <label for="sign-up-name">Your new name:</label>
                <input class="form-control text-center" type="text" name="name" value={{name}}>
              </div>
              <div class="form-group text-center">
                <label for="sign-up-lastName">Your new last name:</label>
                <input class="form-control text-center" type="text" name="lastName" value={{lastName}}>
              </div>
              <div class="form-group text-center">
                <label for="sign-up-email" class="text-center">Your new email address:</label>
                <input class="form-control text-center" type="email" name="email" value={{email}}>
              </div>
              <div class="form-group">
                <label for="city form-control">City:</label>
                <select id="city" name="city" class="form-control">
                  <option selected>Choose...</option>
                  <option>Amsterdam</option>
                  <option>Barcelona</option>
                  <option>Berlin</option>
                  <option>Lisbon</option>
                  <option>Madrid</option>
                  <option>Miami</option>
                  <option>México City</option>
                  <option>Paris</option>
                  <option>São Paulo</option>
                </select>
              </div>
              <div class="container d-flex justify-content-center">
                <button type="submit" class="btn btn-outline-primary">Update Information</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{!-- EDIT PROFILE BUTTON ENDS HERE --}}

    {{!-- DELETE BUTTON STARTS HERE --}}
    <!-- Button trigger modal -->
    <button class="btn btn-outline-danger" data-toggle="modal" data-target=".bd-example-modal-sm">
      Delete Account!
    </button>

    <!-- Modal -->
    <div class="modal fade bd-example-modal-sm mx-4" id="exampleModal" tabindex="-1" role="dialog"
      aria-labelledby="mySmallModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Delete Account</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-dialog modal-sm">
            Are you sure that you want to delete your account?
          </div>
          <div class="container">
            <div class="modal-footer d-flex justify-content-around row">
              <a class="btn btn-outline-primary col" href="/profile" role="button">No</a>
              <a class="btn btn-outline-danger col" href="/delete-user" role="button">Yes</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{!-- DELETE BUTTON ENDS HERE --}}
  </div>
</div>


<div class="container">
  <div class="row">
    <h4 class="col-6 mt-5 mb-3">Place's History</h4>
  </div>
  <div class="row">
    {{#each _createdPlaces}}
   <div class="col-4">
        <div class="card rounded m-2 shadow bg-light">
        <div class="card-body">
          <h5 class="card-title text-primary">{{this.name}}</h5>
          <h6 class="card-subtitle mb-2 text-muted">{{this.address}}</h6>
          <p class="card-text">{{this.city}} {{this.contact}}</p>
          <p class="card-text">{{this.description}}</p>
          <a class="card-text btn btn-outline-primary btn-sm mb-2" href="{{this.link}}" target="_blank">Open Map</a>
          <p class="card-text text-info">{{this.category}}</p>
        </div>
        </div>
        <div class="row p-2">
          <a class="btn btn-outline-primary col mx-2" href="/edit-place/{{this._id}}">Edit</a>
          <a class="btn btn-outline-danger col mx-2" href="/delete-place/{{this._id}}">Delete</a>
        </div>
      </div>
    {{/each }}
  </div>
</div>

